{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} - Liste des utilisateurs{% endblock %}

{% block activeUsers %}
	class="active"
{% endblock %}

{% block content %}
	<table id="listeUtilisateurs_table" class="table table-striped table-bordered datatable_table">
		<thead>
			<th>Username</th>
			<th>Email</th>
			<th>Roles</th>
		</thead>
	</table>
    <button type="button" class="btn btn-success" id="addModal"><span class="glyphicon glyphicon-plus"></span> Ajouter</button>

	{{ render(controller('LCSBundle:Utilisateur:edit', {'id' : 0})) }} 

{% endblock %}
    
{% block pageScript %}
    {% javascripts 'js/datatables/listeUtilisateurs.js' output='js/compiled/listeUtilisateurs.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}