<div class="modal fade" id="edit-modal-setTourGM" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            {% include 'modalHeader.html.twig' %}

            <div class="modal-body" id="edit_form_container_setTourGM">
                 <h4 class="modal-title">
                    Atribution des tours aux matchs de poule
                </h4>
                <div class="well">
                    {% form_theme form with ['bootstrap_3_layout.html.twig', 'Form/bootstrap-validator.html.twig'] %}
                    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
                    <h3>Rappel des tours</h3>
                    {% for tour in tours %}
                        {% if tour.semaine is not null %}
                        <p>
                            <b>{{ tour.nom }}</b> : Semaine du <b>{{ tour.semaine|date('d/m/Y') }}</b>
                        </p>
                        {% else %}
                        <p>
                            <b>{{ tour.nom }}</b> : A définir</b>
                        </p>  
                        {% endif %}
                    {% endfor %}                    
                    
                    <h3>Informations sur les matchs</h3>
                    <table id="setTourTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Match</th>
                                <th>Tour</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for id in form_id %}
                            <tr>
                                <td><label>{{ form[id].vars.label|raw }}</label></td>
                                <td style="text-align: center;" class="input_tour">{{ form_widget(form[id].tour) }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                        
                        <style type="text/css">
                            #setTourTable > tbody > tr > td.input_tour > select {
                                margin : 0;
                            }
                        </style>
                    
                    {{ form_rest(form) }}
                    
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" data-action="submit">Enregistrer</button>
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Annuler</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div id="modal-validation-message-creation-setTourGM" style="display: none;">
                <p>Les tours ont bien été affectés aux matchs de poules</p>
            </div>
        </div>
    </div>
</div>