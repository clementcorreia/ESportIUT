<!DOCTYPE html>
<html>
    <head>
        {% block stylesheets %}
            {% stylesheets 
                'bootstrap/css/bootstrap.min.css'
                'bootstrap/css/bootstrap-theme.min.css'
                'css/material.icons.css'
                'datatables/datatables.min.css'
                'css/jquery.datetimepicker.css'
                'jqueryui/jquery-ui.css'
                'css/toastr.min.css'
                'css/main.css' 
                filter='cssrewrite' output='css/compiled/main.css' %}
                <link rel="stylesheet" href="{{ asset_url }}?v=0.0.2"></script>
            {% endstylesheets %}
        {% endblock %} 
        <title>CEM - Outil de gestion</title>
    </head>
    <body>
        {% trans_default_domain 'GestionBundle' %}
        <div class="container">
            <h1>{% block title %}E-Sport IUT{% endblock %}</h1>
            
            {% block menu %}         
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="navbar-brand">Menu</span>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li {% block activeAccueil %}{% endblock %}><a href="{{ path("lcs_homepage") }}">Accueil</a></li>
                            <li {% block activeCompetitions %}{% endblock %}><a href="{{ path("lcs_competitions_index") }}">Compétitions</a></li>
                            <li {% block activeEquipes %}{% endblock %}><a href="{{ path("lcs_equipes_index") }}">Equipes</a></li>
                            <li {% block activeJoueurs %}{% endblock %}><a href="{{ path("lcs_joueurs_index") }}">Joueurs</a></li>
                            <li {% block activeMatchs %}{% endblock %}><a href="{{ path("lcs_matchs_index") }}">Matchs</a></li>
                            <li {% block activeAdmin %}{% endblock %}><a href="{{ path("lcs_admin_index") }}">Administration</a></li>
                        </ul>
                        {% if app.user %}
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path("fos_user_security_logout") }}"><i class="material-icons" style="vertical-align: middle; margin-top: -5px;">exit_to_app</i> Déconnexion</a></li>
                        </ul>
                        {% endif %}
                    </div>
                </div>
            </nav>
            {% endblock %}
            {% block breadcrumb %}{% endblock %}
           
            {% block flashMessages %}
                {% for type, messages in app.session.flashBag.all %}
                    {% for message in messages %}
                        <div class="alert {{ 'alert-' ~ type }}">
                            {{ message|trans() }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
            
            {% block content %}{% endblock %}
        </div>
        
        {% block javascripts %}
            {% javascripts 
                'js/lib/jquery-3.2.1.min.js'
                'jqueryui/jquery-ui.js'
                'datatables/datatables.min.js'
                'js/lib/jquery.datetimepicker.full.js'
                'bootstrap/js/bootstrap.min.js'
                'js/lib/bootstrap-validator.js'
                'js/lib/toastr.min.js'
                'bundles/fosjsrouting/js/router.js'
                'js/main.js' output='js/compiled/main.js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
        {% block pageScript %}{% endblock %}
    </body>
</html>
